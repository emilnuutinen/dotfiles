[default]

default_calendar = personal
highlight_event_days = true
show_all_days = true
timedelta = 7d

[calendars]

[[personal]]
path = ~/.config/vdirsyncer/calendars/personal
color = dark blue

[[work]]
path = ~/.config/vdirsyncer/calendars/work
color = dark green

[[meetings]]
path = ~/.config/vdirsyncer/calendars/meetings
color = dark magenta

[[school]]
path = ~/.config/vdirsyncer/calendars/school
color = dark cyan

[[holidays]]
path = ~/.config/vdirsyncer/calendars/holidays
color = dark red

[locale]

unicode_symbols = false
local_timezone= Europe/Helsinki
default_timezone= Europe/Helsinki
timeformat= %H:%M
dateformat= %d.%m.
longdateformat= %d.%m.%Y
datetimeformat= %d.%m. %H:%M
longdatetimeformat= %d.%m.%Y %H:%M
weeknumbers = left

[view]

frame = color
dynamic_days = False
